<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paging.PagingActivity">

    <com.chauthai.overscroll.RecyclerViewBouncy
        android:id="@+id/mRecycler2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:friction="150"
        app:gapLimit="220"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxAdapterSizeToEstimate="20"
        app:speedFactor="15"
        app:tension="1000"
        android:visibility="gone"
        app:viewCountEstimateSize="5" />

    <com.example.myfirstapp.slider.SlidingItemMenuRecyclerView
        android:id="@+id/mRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:itemDraggable="true"
        app:itemScrollDuration="600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>